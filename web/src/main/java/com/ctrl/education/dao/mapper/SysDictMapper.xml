<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ctrl.education.dao.SysDictMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ctrl.education.model.SysDict">
        <id column="id" property="id" />
        <result column="code" property="code" />
        <result column="pid" property="pid" />
        <result column="name" property="name" />
        <result column="sort" property="sort" />
        <result column="remark" property="remark" />
    </resultMap>
    <select id="getTree" resultType="com.ctrl.education.core.node.ZTreeNode">
         SELECT
        m1.id AS id,
        m1.name,
        m1.code,
        IFNULL(m1.pid,0) AS pid,
        m1.name,
        (
        CASE
        WHEN (m2.id = 0 OR m2.id IS NULL) THEN
        'true'
        ELSE
        'false'
        END
        ) AS isOpen
        FROM
        sys_dict m1
        LEFT JOIN sys_dict m2 ON m1.pid = m2.id
        WHERE m1.pid=0
    </select>

</mapper>
